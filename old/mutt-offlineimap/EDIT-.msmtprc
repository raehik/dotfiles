# Set default values for all following accounts.
defaults
auth            on
tls             on
tls_trust_file  /etc/ssl/certs/ca-certificates.crt

# use system logging
syslog on

# log to file
#logfile         ~/.msmtp.log

# The SMTP server of the provider.
account         gmail
host            smtp.gmail.com
port            587
from            thefirstmuffinman@gmail.com
user            thefirstmuffinman
password

# Set a default account
account default : gmail
