# set base identity, then potentially override based on filesystem location
[include]
    path = identity-default
[includeIf "gitdir:~/work/"]
    path = identity-work

[core]
    quotepath = false
    autocrlf = false
[alias]
    s = status
    l = log
    a = add
    c = commit
    co = checkout
    d = diff
    b = branch
[push]
    default = simple
