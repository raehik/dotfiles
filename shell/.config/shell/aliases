# vim: syntax=sh filetype=sh :
#
# Non-specific/common (bash & zsh) shell aliases.
#
# This is only for *shell-related shortcuts* which I might use in a
# terminal session. i3 and dmenu_run can't read aliases, so some things
# are stored as one-line files in my ~/bin.
#
# Anything that is a shortcut or something belongs here, rather than in
# my ~/bin, if it's only for my ease of use (e.g. tmpmux, since it can
# be achieved easily in another way
#

# as of 2015-11-04 commit 109b9220c, ls now uses a different default quoting
# method for terminals. I don't like it (makes my music library etc. look ugly)
alias ls="ls --color=auto --literal"

# grep colours
alias grep="grep --color=auto"

# allow aliases with 'sudo' prefixed -- pretty cool
alias sudo="sudo "

# useful ls aliases
alias ll="ls -lh"
alias la="ls -lAh"
alias l="ls"
alias lb="ls -la"

# so much git rite now
alias g="git"

# useful tmux shortcut
alias t="tmux"

# vim is my 3rd most common command, make it easier
alias v="vim"

# I do this so much, make it shorter
alias cm="git c -m"

# quicker 'date now' command
alias d="date +%F"

# quicker 'remove all empty dirs' command
alias rmds="rmdir --ignore-fail-on-non-empty *"

# automatic ls to stop my habit
cdl() {
    cd $@
    if [ $? -eq 0 ]; then
        ls --color=auto
    fi
}

# shorter cdl so maybe I use it more plz
alias c="cdl"

# cd to the real path of current directory
real() {
    if [[ $# > 0 ]]; then
        # we got an argument, so cd to it's realpath
        if [[ -d "$1" ]]; then
            # it's a directory
            new_dir="$(realpath "$1")"
        else
            # it's a file, so cd to it's directory
            new_file="$(realpath "$1")"
            new_dir="${new_file%/*}"
        fi
    else
        # no arguments, use current directory
        new_dir="$(realpath .)"
    fi

    cd "$new_dir"
}

# copy a file to the clipboard
alias clpb="xsel -i -b < "

# mount under current user w/ UTF8 for NTFS
# bash doesn't keep track of GID, so we'll use a command
alias ntfsmount="mount -ouid=$(id -u),gid=$(id -g),utf8"
