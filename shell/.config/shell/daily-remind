# vim: ft=sh
#
# Daily calendar reminder using remind.
#

rem_cache="$HOME/.cache/daily-remind"
date_today="$(date "+%F")"

# create cache file if not created, else do nothing of importance
touch "$rem_cache"

if [[ "$(< "$rem_cache")" != "$date_today" ]]; then
    rem
    echo "$date_today" > "$rem_cache"
fi
