# vim: ft=sh
#
# Environment variables for purely graphical applications.
#
# Helps to keep things clean (could go in main shellrcs, but Arch wiki suggests
# this cleaner method).
#

# input method (IBus)
export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
ibus-daemon -drx

# Steam
# with STEAM_FRAME_FORCE_CLOSE=1, clicking X (close) button on window will
# actually close the window until you bring it back up using the tray app, like
# on Windows. Note that i3's kill command will still shut down Steam proper (as
# intended).
export STEAM_FRAME_FORCE_CLOSE=1
