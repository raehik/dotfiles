# vim: ft=sh
#
# Environment variables for purely graphical applications.
#
# Could go in general shell config, but this method keeps the environment clean.
# And it's our duty to keep the environment clean.
#

# input method (IBus)
# REQ: ibus
export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
ibus-daemon -drx

## Application-specific {{{
# Steam: close window to tray on X/close button click
export STEAM_FRAME_FORCE_CLOSE=1
## Application-specific }}}
