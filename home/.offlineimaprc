# vim: set ft=conf :

[general]
accounts = gmail
# controls how many accounts may be synced simultaneously
maxsyncaccounts = 1

[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote
status_backend = sqlite
# minutes between syncs
autorefresh = 5
# no. of quick-syncs between autorefreshes
# Quick-syncs do not update if the only changes were to IMAP flags.
quick = 10

[Repository gmail-local]
type = Maildir
localfolders = ~/mail/gmail
sep = /
# map special Gmail folders ('system labels') to nicer folders & back
nametrans = lambda folder: {'drafts':   '[Gmail]/Drafts',
                            'sent':     '[Gmail]/Sent Mail',
                            'spam':     '[Gmail]/Spam',
                            'archive':  '[Gmail]/All Mail'
                            }.get(folder, folder)

[Repository gmail-remote]
type = Gmail
remoteuser = thefirstmuffinman@gmail.com
# realdelete = no
maxconnections = 5
# map special Gmail folders ('system labels') to nicer folders & back
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Spam':      'spam',
                            '[Gmail]/All Mail':  'archive'
                            }.get(folder, folder)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
# Instead of closing the connection once a sync is complete, offlineimap will
# send empty data to the server to hold the connection open. A value of 60
# attempts to hold the connection for a minute between syncs (both quick and
# autorefresh).This setting has no effect if autorefresh and holdconnectionopen
# are not both set.
# do I want this???
#keepalive = 60
# OfflineIMAP normally closes IMAP server connections between refreshes if
# the global option autorefresh is specified.  If you wish it to keep the
# connection open, set this to true. This setting has no effect if autorefresh
# is not set.
# do I want this???
#holdconnectionopen = yes

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "# header can't be empty :/\n"
peritem = mailboxes "=%(foldername)s"
sep = "\n"
footer = "\n"
