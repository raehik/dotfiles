# Newsbeuter config file.
# To be placed in ~/.newsbeuter or ~/.config/newsbeuter
always-display-description	true

# move cache file to ~/.cache
cache-file "~/.cache/newsbeuter-cache.db"

# reload feeds on startup
auto-reload			yes

# browser to open in
browser				firefox

cleanup-on-quit			yes
download-retries		10
download-timeout		20
refresh-on-startup		yes
reload-time			10
download-path			"~/media/podcasts"
max-downloads			2
