# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        output_format = "i3bar"
}

order += "mpd_raehik"
order += "volume_better"
order += "disk /home"
order += "battery 1"
#order += "wireless wlp4s0"
#order += "ethernet INTERFACE"
order += "load"
order += "time"

disk "/home" {
    format = "%avail free"
}

#wireless wlp4s0 {
#    format_up = "W: %quality"
#    format_down = "W: down"
#}
#
#ethernet INTERFACE {
#    # if you use %speed, i3status requires root privileges
#    format_up = "E: %ip (%speed)"
#    format_down = "E: down"
#}

load {
    format = "%1min load"
}

time {
    format = "%H:%M"
}

battery 1 {
    format = "%status %percentage %remaining"
}

volume master {
    format = "%volume"
    on_click 3 = "exec amixer set Master toggle"
    on_click 4 = "exec amixer -M set Master 1dB+"
    on_click 5 = "exec amixer -M set Master 1dB-"
}

mpd_raehik {
    cache_timeout = 1
    color_play = "#AA5500"
    color_pause = "#555555"
    color_stop = "#555555"
    color_off = "#555555"
    color_error = "#FF0000"
    format_play = "♬  {artist}{name}"
    # pango, u dun goofed: https://github.com/i3/i3status/issues/6
    format_pause = "&lt;♬  {artist}{name}>"
    format_stop = "&lt;♬  stopped>"
    format_off = "&lt;♬  off>"
    on_click 1 = "exec --no-startup-id mpc toggle"
    on_click 2 = "exec --no-startup-id mpc next"
    on_click 3 = "exec --no-startup-id mpc stop"
}

volume_better {
    cache_timeout = 1
    mixer = "Master"
    format = "{volume}%"
    format_muted = "-M-"
    color = "#6666FF"
    color_muted = "#AA0000"
    on_click 3 = "exec amixer set Master toggle"
    on_click 4 = "exec amixer -M set Master 1dB+"
    on_click 5 = "exec amixer -M set Master 1dB-"
}
