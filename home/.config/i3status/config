# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        #interval = 4
        interval = 1
        output_format = "i3bar"
}

order += "volume master"
order += "disk /home"
order += "battery 1"
#order += "wireless wlp4s0"
#order += "ethernet INTERFACE"
order += "load"
order += "time"

volume "master" {
    # doesn't use human/natural scale like alsamixer or amixer -M
    format = "%volume"
    device = "default"
    mixer = "Master"
}

disk "/home" {
    format = "%avail free"
}

#wireless wlp4s0 {
#    format_up = "W: %quality"
#    format_down = "W: down"
#}
#
#ethernet INTERFACE {
#    # if you use %speed, i3status requires root privileges
#    format_up = "E: %ip (%speed)"
#    format_down = "E: down"
#}

load {
    format = "%1min load"
}

time {
    format = "%H:%M"
}

battery 1 {
    format = "%status %percentage %remaining"
}
