#compdef logs

local list_dir="$HOME/logs"
local list_ext=".md"

local lists=

for list in $list_dir/*$list_ext; do
    # get list without extension
    local name="${list%.*}"

    # append only filename (not ~/$list_dir/filename)
    local lists="$lists ${name##*/}"
done

_arguments "1: :($lists)"
