#!/usr/bin/env bash
#
# Dock or undock from a workstation (basically just turn a monitor on or off).
#

main_output="eDP1"
extra_output="VGA1"
location="--right-of"

if [ "$1" == "on" ] || [ "${0##*/}" == "dock" ]; then
    xrandr --output $extra_output --auto $location $main_output
fi
if [ "$1" == "off" ] || [ "${0##*/}" == "undock" ]; then
    xrandr --output $extra_output --off
fi
